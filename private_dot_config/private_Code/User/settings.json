{
  //
  // Appearance
  //
  "window.titleBarStyle": "custom",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.colorTheme": "Catppuccin Mocha",
  "catppuccin.accentColor": "lavender",
  "editor.fontFamily": "'Maple Mono NF CN', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  //
  // Appearance
  //

  //
  // format settings
  //
  "editor.formatOnSave": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //
  // format settings
  //

  //
  // qt settings
  //
  "qt-core.additionalQtPaths": [
    {
      "name": "Qt-5.15.18-linux-g++_from_PATH",
      "path": "/usr/bin/qmake"
    },
    {
      "name": "Qt-6.10.1-linux-g++",
      "path": "/usr/bin/qmake6"
    }
  ],
  "qt-qml.qmlls.useQmlImportPathEnvVar": true,
  "qt-qml.doNotAskForQmllsDownload": true,
  "qt-qml.qmlls.customExePath": "/usr/lib/qt6/bin/qmlls",
  "qt-qml.qmlls.customDocsPath": "/usr/share/doc/qt6/",
  //
  // qt settings
  //

  //
  // vim settings
  //
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.easymotion": true,
  "vim.smartRelativeLine": true,
  "vim.useCtrlKeys": true, // Let Vim handle Ctrl keys (config exceptions below)

  // 2. Pane Navigation: Move between VS Code splits naturally
  "vim.normalModeKeyBindingsNonRecursive": [
    // Move between splits using Ctrl + h/j/k/l
    { "before": ["<C-h>"], "commands": ["workbench.action.navigateLeft"] },
    { "before": ["<C-j>"], "commands": ["workbench.action.navigateDown"] },
    { "before": ["<C-k>"], "commands": ["workbench.action.navigateUp"] },
    { "before": ["<C-l>"], "commands": ["workbench.action.navigateRight"] },

    // Leader Shortcuts
    // <space>+q to close active editor
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],

  // 3. Handle Keys: Pass specific keys back to VS Code
  // This prevents Vim from blocking standard shortcuts you might still want
  "vim.handleKeys": {
    "<C-f>": false, // Use VS Code's native Find
    "<C-p>": false, // Use VS Code's Quick Open
    "<C-a>": false, // Use VS Code's Select All
    "<C-c>": false, // Use VS Code's native Copy (for safety)
    "<C-v>": false // Use VS Code's native Paste (for safety)
  },
  //
  // vim settings
  //

  "editor.acceptSuggestionOnEnter": "off",
  "terminal.external.linuxExec": "kitty"
}
